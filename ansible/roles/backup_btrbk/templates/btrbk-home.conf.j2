# btrbk configuration for home subvolume
# Hourly snapshots for user data protection

timestamp_format long
transaction_log /var/log/btrbk-home.log

# Retention: moderate history for /home
snapshot_preserve_min 2h
snapshot_preserve 48h 14d 4w 1m

volume /mnt/btrfs_root
  snapshot_dir snapshots
  snapshot_create always

  subvolume home
    snapshot_name {{ ansible_facts['hostname'] }}_home
